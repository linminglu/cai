<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/md_divider_white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="订单号："
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/qq3saomadingdanhao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="1504490197070473"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="充值金额："
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/qq3saomaamount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="500"
                    android:textSize="13sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/qq3saomaerweima"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/qq3saomaerrortip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="为更快到账，系统随机多加两位小数金额，实际充值金额以此为准，如遇无法充值请降低金额或点击上一步更换其他排序充值"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/qq3saomashangyibu"
                    style="@style/button"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="上一步"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/qq3saomawoyizhifu"
                    style="@style/button"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="我已支付"
                    android:textSize="14sp"/>
            </LinearLayout>

            <WebView
                android:id="@+id/qq3saomasteps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>