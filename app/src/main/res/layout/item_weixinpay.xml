<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/minefragment_state_ly"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/item_weixinpay_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/item_weixinpay_cb"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="2"
        android:text="微信扫一扫付款"
        android:textColor="@color/light_black"
        android:textSize="14sp"/>

    <CheckBox
        android:id="@+id/item_weixinpay_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:id="@+id/item_weixinpay_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_weixinpay_name"
        android:layout_alignStart="@+id/item_weixinpay_name"
        android:layout_below="@+id/item_weixinpay_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:maxLength="30"
        android:maxLines="2"
        android:text="重要：在转账时，请备注您的会员账号，才可以事实到账"
        android:textColor="@color/light_black"
        android:textSize="11sp"/>

</RelativeLayout>
