<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/notify_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/item_qiandaojilu_checkinDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/item_qiandaojilu_giftAmount"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="2"
        android:text="20170810"
        android:textColor="@color/black"
        android:textSize="@dimen/font_large"/>

    <TextView
        android:id="@+id/item_qiandaojilu_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_qiandaojilu_checkinTime"
        android:layout_alignBottom="@+id/item_qiandaojilu_checkinTime"
        android:layout_alignLeft="@+id/item_qiandaojilu_checkinDay"
        android:layout_alignStart="@+id/item_qiandaojilu_checkinDay"
        android:text="充值总额：0元"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/item_qiandaojilu_giftAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_qiandaojilu_checkinDay"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="0元"
        android:textColor="@color/red"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_qiandaojilu_checkinTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignEnd="@+id/item_qiandaojilu_giftAmount"
        android:layout_alignRight="@+id/item_qiandaojilu_giftAmount"
        android:layout_marginBottom="14dp"
        android:text="2017-08.10 09:48:06"/>

</RelativeLayout>