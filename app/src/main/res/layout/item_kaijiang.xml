<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/minefragment_state_ly"
    android:clickable="true"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/item_kaijiang_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="我的推荐"
        android:textColor="@color/red"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_kaijiang_qishu"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_kaijiang_name"
        android:gravity="bottom"
        android:text="我的推荐"
        android:textColor="@color/light_black"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="@mipmap/minefragment_right_img"/>

    <TextView
        android:id="@+id/item_kaijiang_haoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/item_kaijiang_name"
        android:layout_alignRight="@+id/item_kaijiang_name"
        android:layout_below="@+id/item_kaijiang_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="我的推荐"
        android:textColor="@color/light_black"
        android:textSize="16sp"/>

</RelativeLayout>
