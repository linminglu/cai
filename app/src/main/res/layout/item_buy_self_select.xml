            android:textColor="@color/black"
            android:textSize="12sp"
            />

        <EditText
            android:id="@+id/et_num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/liuhecai_btn_weixuan_01"
