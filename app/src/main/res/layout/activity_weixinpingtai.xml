<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/md_divider_white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray_button"
                android:padding="6dp"
                android:text="您欲转入的微信："
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="订单号："
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/weixinpingtai_dingdanhao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="1504490197070473"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="微信号："
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/weixinpingtai_weixinhao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="微信扫一扫付款"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="微信名："
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/weixinpingtai_weixinming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="易点付1"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="充值金额："
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/weixinpingtai_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="500"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/weixinpingtai_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:text="重要：在转账时，请备注您的会员账号，才可以实时到账！"
                android:textColor="@color/red"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/weixinpingtai_erweima"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/weixinpingtai_errortip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="为更快到账，系统随机多加两位小数金额，实际充值金额以此为准，如遇无法充值请降低金额或点击上一步更换其他排序充值"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/weixinpingtai_shangyibu"
                    style="@style/button"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="上一步"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/weixinpingtai_woyizhifu"
                    style="@style/button"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="我已支付"
                    android:textSize="14sp"/>
            </LinearLayout>

            <WebView
                android:id="@+id/weixinpingtai_steps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>