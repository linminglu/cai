<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/middle_gray" android:startColor="@color/middle_gray"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/light_gray" android:startColor="@color/light_gray"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/dark_gray" android:startColor="@color/dark_gray"/>
        </shape>
    </item>

</selector>