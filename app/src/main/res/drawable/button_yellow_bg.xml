<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/yellow_press" android:startColor="@color/yellow_press"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/yellow" android:startColor="@color/yellow"/>
        </shape>
    </item>

</selector>