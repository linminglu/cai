<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- <item name="android:popupBackground">?attr/colorPrimary</item> --><!-- 修改popup的背景色 -->
        <!-- <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item> -->
    </style>

    <style name="OverflowMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MyAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- 密码CheckBox -->
    <style name="PassWordCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_password</item>
    </style>

    <style name="button">
        <item name="android:textColor">@drawable/button_textcolor</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <style name="buttonfan">
        <item name="android:textColor">@drawable/button_textcolorfan</item>
        <item name="android:background">@drawable/button_bgfan</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

</resources>
